<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Student Classes</h2>
<button class="btn btn-success" id="addStudentClassButton">Add Class</button>
<table class="table table-striped table-bordered" id="student_classTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Student ID</th>
      <th>Class ID</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof studentclasses != "undefined" && studentclasses.length > 0){ %>
    <% studentclasses.forEach(function(student_class){ %>
      <tr>
        <td><%= student_class.student_class_id %></td>
        <td><%= student_class.student_id %></td>
        <td><%= student_class.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-studentclassid="<%= student_class.student_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-studentclassid="<%= student_class.student_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<!-- this is the form to delete the student, display none means it is hidden until clicked -->
<form action="/delete_student_class" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="student_class_id">
</form>

<!-- this form to add the student is display:none so it is hidden until we click to edit student -->
<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageStudentClassForm">
  <input type="hidden" name="student_class_id">
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id" placeholder="Student ID" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id"  placeholder="Class ID" required>
    </div>
  </div>
</form>

